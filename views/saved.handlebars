<div class="container">
	<div class="row">

		<div class="banner valign-wrapper">
			<h1 class="center-align bannerText">Saved Articles</h1>
		</div>

		<ul class="collection">
		{{#each articles}}

		    <li class="collection-item">
		    <a href="{{this.link}}">{{this.title}}</a>
		    <a class="waves-effect waves-light btn notesBtn" data-id="{{this.id}}" href="#notesModal">Article Notes</a>
		    <a class="waves-effect waves-light btn unsaveBtn" href="/unsavearticle/{{this.id}}">Unsave Article</a>
		    </li>

		{{/each}}
		</ul>

		{{!-- Notes Modal --}}
		<div id="notesModal" class="modal">
		    <div class="modal-content">
		    	<h4 id="modalHead">Modal Header</h4>
		    	<ul class="collection" id="noteCollection">
					
		    	</ul>

		    	<form id="noteForm" action="" method="POST">
			    	<div class="input-field col s12">
			          <textarea id="textarea1" class="materialize-textarea" name="note"></textarea>
			          <label for="textarea1">New Note</label>
			        </div>
					<button type="submit" class="waves-effect waves-light btn" id="addNoteBtn">Add Note</button>
		        </form>
		    </div>
		    
	  	</div>
	</div>
</div>